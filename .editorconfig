root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# A double space is a line break
[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2


## Test snapshots
# Jest snapshots may include trailing spaces
[*.snap]
indent_size = 2
trim_trailing_whitespace = false
